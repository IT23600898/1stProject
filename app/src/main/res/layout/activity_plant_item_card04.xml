<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#E9E1D9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Plant image (left) -->
        <ImageView
            android:id="@+id/ivPhoto04"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_plant04"
            android:contentDescription="@string/app_name"
            android:background="@drawable/rounded_img_mask"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Right side text block -->
        <LinearLayout
            android:id="@+id/infoBlock4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivPhoto04"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SNAKE PLANT"
                android:textStyle="bold"
                android:textSize="14sp"
                android:letterSpacing="0.05" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Sansevieria)"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="2dp" />

            <!-- Spacing -->
            <Space
                android:layout_width="0dp"
                android:layout_height="8dp" />

            <!-- Water row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iconWater4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_drop"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvWater4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WATER  Every 2–3 weeks"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Light row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iconSun4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sun"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvLight4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIGHT  Low to bright, indirect"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Temp row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iconTemp4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_temp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvTemp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPERATURE  15 – 29°C"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
